---
import { getCollection } from 'astro:content';

// Obtener los posts del blog
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// Ordenar por fecha
const sortedPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Mostrar primeros 10 en la homepage
const latestPosts = sortedPosts.slice(0, 10);
const hasMorePosts = sortedPosts.length > 10;

// Función para formatear fecha
function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<section id="blog" class="section">
  <div class="container-custom">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Blog & <span class="gradient-text">Artículos</span>
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Comparto conocimientos sobre desarrollo frontend, SEO y las últimas tecnologías web
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 mb-12">
      {latestPosts.map((post) => (
        <article class="card group hover:scale-[1.02] transition-all duration-300">
          <div class="mb-4">
            <div class="flex flex-wrap gap-2 mb-3">
              {post.data.tags.slice(0, 2).map((tag) => (
                <span class="text-xs px-3 py-1 bg-primary/20 text-primary rounded-full">
                  {tag}
                </span>
              ))}
            </div>
            <h3 class="text-xl font-bold text-white mb-2 group-hover:text-primary transition-colors">
              <a href={`/blog/${post.slug}`}>
                {post.data.title}
              </a>
            </h3>
            <p class="text-gray-400 text-sm mb-3">
              {post.data.description}
            </p>
            <div class="flex items-center gap-2 text-gray-500 text-xs">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
              </svg>
              <time datetime={post.data.pubDate.toISOString()}>
                {formatDate(post.data.pubDate)}
              </time>
            </div>
          </div>
          <a 
            href={`/blog/${post.slug}`}
            class="inline-flex items-center gap-2 text-primary hover:gap-3 transition-all duration-300"
          >
            Leer artículo
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </article>
      ))}
    </div>

    <!-- CTA para ver todos los artículos -->
    {hasMorePosts && (
      <div class="text-center">
        <a href="/blog" class="btn-outline">
          Ver todos los artículos ({sortedPosts.length})
        </a>
      </div>
    )}
  </div>
</section>

