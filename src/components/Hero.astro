---
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="inicio" class="min-h-screen flex items-center justify-center section pt-32">
  <div class="container-custom">
    <div class="text-center">
      <div class="mb-8">
        <h1 class="text-5xl md:text-7xl font-bold mb-4">
          {t('hero.greeting')} <span class="gradient-text">{t('hero.name')}</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-400 mb-2">
          {t('hero.role')}
        </p>
        <p class="text-lg text-gray-500">
          {t('hero.location')}
        </p>
      </div>
      
      <p class="text-lg md:text-xl text-gray-300 max-w-3xl mx-auto mb-8 leading-relaxed">
        <Fragment set:html={t('hero.description')} />
        <a 
          href="https://wegow.com" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-secondary font-semibold hover:text-primary transition-colors duration-300"
        >
          {t('hero.company')}
        </a>.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
        <a href="/#contacto" class="btn-primary">
          {t('hero.cta.contact')}
        </a>
        <a href="/#experiencia" class="btn-outline">
          {t('hero.cta.experience')}
        </a>
      </div>

      <!-- Social Links -->
      <div class="flex gap-6 justify-center">
        <a 
          href="https://www.linkedin.com/in/pabloalcaldegarcia" 
          target="_blank" 
          rel="noopener noreferrer"
          class="social-link"
          aria-label="LinkedIn"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"></path>
          </svg>
        </a>
        <a 
          href="mailto:pablooalcaldegarcia@gmail.com"
          class="social-link"
          aria-label="Email"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>

<style>
  .social-link {
    @apply text-gray-400 hover:text-primary transition-all duration-300 p-3 rounded-full hover:bg-dark-lighter;
  }
</style>

