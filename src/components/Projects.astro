---
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const projects = [
  {
    title: "Tu Carta en Digital",
    description: "Plataforma gratuita para digitalizar cartas de bares y restaurantes con gestión completa de establecimientos.",
    url: "https://tucartaendigital.es",
    image: "/projects/tucartaendigital.jpg",
    technologies: ["Nuxt.js", "FastAPI", "Google Analytics", "APIs"],
    features: [
      "Digitalización de cartas en segundos",
      "Personalización de colores y estilo",
      "Gestión multi-establecimiento",
      "Actualización de precios en tiempo real"
    ],
    team: "",
    category: "Plataforma Web"
  },
  {
    title: "Kikoundefiledburger",
    description: "Sitio web para hamburguesería en Granada con optimización SEO y rendimiento excepcional.",
    url: "https://kikoundefiledburger.com",
    image: "/projects/kikoundefiledburger.jpg",
    technologies: ["Vue.js", "Nuxt.js", "SSR", "SEO"],
    features: [
      "Renderizado del lado del servidor (SSR)",
      "Optimización SEO avanzada",
      "Experiencia de usuario fluida",
      "Estructura escalable"
    ],
    team: "",
    category: "Sitio Web Comercial"
  }
];
---

<section id="proyectos" class="section bg-dark-lighter">
  <div class="container-custom">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-12">
      {t('projects.title')} <span class="gradient-text">{t('projects.titleHighlight')}</span>
    </h2>
    
    <p class="text-xl text-gray-300 text-center mb-16 max-w-3xl mx-auto">
      {t('projects.subtitle')}
    </p>

    <div class="grid lg:grid-cols-2 gap-12">
      {projects.map((project, index) => (
        <div class="card group hover:scale-[1.02] transition-all duration-300">
          <div class="mb-6">
            <div class="flex items-center justify-between mb-4">
              <span class="text-sm px-3 py-1 bg-primary/20 text-primary rounded-full">
                {project.category}
              </span>
              <span class="text-sm text-gray-400">{project.team}</span>
            </div>
            
            <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-primary transition-colors">
              {project.title}
            </h3>
            
            <p class="text-gray-300 mb-4 leading-relaxed">
              {project.description}
            </p>
          </div>

          <div class="mb-6">
            <h4 class="text-lg font-semibold text-white mb-3">{t('projects.features')}:</h4>
            <ul class="space-y-2">
              {project.features.map((feature) => (
                <li class="text-gray-300 flex items-start gap-2">
                  <span class="text-primary mt-1">✓</span>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
          </div>

          <div class="mb-6">
            <h4 class="text-lg font-semibold text-white mb-3">{t('projects.technologies')}:</h4>
            <div class="flex flex-wrap gap-2">
              {project.technologies.map((tech) => (
                <span class="text-sm px-3 py-1 bg-dark border border-gray-700 rounded-lg text-gray-300">
                  {tech}
                </span>
              ))}
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-3">
            <a 
              href={project.url}
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary flex items-center justify-center gap-2"
            >
              <span>{t('projects.seeProject')}</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
            <a 
              href={project.title === "Tu Carta en Digital" ? "/proyectos/tu-carta-en-digital" : "/proyectos/kiko-undefiled-burger"}
              class="btn-outline flex items-center justify-center gap-2"
            >
              <span>{t('projects.viewDetails')}</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-16">
      <div class="card bg-gradient-to-r from-primary/10 to-secondary/10 border-primary/30 max-w-2xl mx-auto">
        <h3 class="text-2xl font-bold mb-4">{t('projects.cta.title')}</h3>
        <p class="text-gray-300 mb-6">
          {t('projects.cta.description')}
        </p>
        <a href="/#contacto" class="btn-primary">
          {t('projects.cta.button')}
        </a>
      </div>
    </div>
  </div>
</section>
