---
import { getLangFromUrl, useTranslations, localizeUrl } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

// Helper para crear URLs localizadas
const getUrl = (path: string) => localizeUrl(path, lang);
