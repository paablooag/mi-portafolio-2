---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import FloatingButtons from '../../../components/FloatingButtons.astro';
import { getLangFromUrl, useTranslations } from '../../../utils/i18n';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });
  
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

function formatDate(date: Date): string {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<Layout
  title={`${entry.data.title} - Blog Pablo Alcalde`}
  description={entry.data.description}
  image={entry.data.image}
  type="article"
  publishedTime={entry.data.pubDate.toISOString()}
  tags={entry.data.tags}
  lang="en"
>
  <Header />
  
  <main class="pt-24">
    <article class="section">
      <div class="container-custom max-w-4xl">
        <!-- Breadcrumb -->
        <nav class="mb-8 text-sm">
          <ol class="flex items-center gap-2 text-gray-400">
            <li><a href="/en" class="hover:text-primary transition-colors">Home</a></li>
            <li>/</li>
            <li><a href="/en/blog" class="hover:text-primary transition-colors">Blog</a></li>
            <li>/</li>
            <li class="text-white">{entry.data.title}</li>
          </ol>
        </nav>

        <!-- Aviso de idioma -->
        <div class="card bg-yellow-500/10 border-yellow-500/30 mb-8">
          <p class="text-sm text-yellow-400 flex items-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
            This article is currently available in Spanish only. English translation coming soon!
          </p>
        </div>

        <!-- Header del artículo -->
        <header class="mb-12">
          <div class="flex flex-wrap gap-2 mb-4">
            {entry.data.tags.map((tag) => (
              <span class="text-xs px-3 py-1 bg-primary/20 text-primary rounded-full">
                {tag}
              </span>
            ))}
          </div>
          
          <h1 class="text-4xl md:text-5xl font-bold mb-4 gradient-text">
            {entry.data.title}
          </h1>
          
          <p class="text-xl text-gray-400 mb-6">
            {entry.data.description}
          </p>
          
          <div class="flex items-center gap-4 text-gray-500 text-sm">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
              </svg>
              <time datetime={entry.data.pubDate.toISOString()}>
                {formatDate(entry.data.pubDate)}
              </time>
            </div>
          </div>
        </header>

        <!-- Contenido del artículo -->
        <div class="card">
          <div class="prose prose-invert prose-lg max-w-none
            prose-headings:gradient-text 
            prose-h2:text-3xl prose-h2:font-bold prose-h2:mb-4 prose-h2:mt-8
            prose-h3:text-2xl prose-h3:font-semibold prose-h3:mb-3 prose-h3:mt-6
            prose-p:text-gray-300 prose-p:leading-relaxed prose-p:mb-4
            prose-a:text-primary prose-a:no-underline hover:prose-a:text-secondary prose-a:transition-colors
            prose-strong:text-white prose-strong:font-semibold
            prose-code:text-secondary prose-code:bg-dark-lighter prose-code:px-2 prose-code:py-1 prose-code:rounded
            prose-pre:bg-dark-lighter prose-pre:border prose-pre:border-gray-700
            prose-ul:text-gray-300 prose-ul:list-disc prose-ul:ml-6
            prose-ol:text-gray-300 prose-ol:list-decimal prose-ol:ml-6
            prose-li:mb-2
            prose-img:rounded-lg prose-img:shadow-lg
            prose-blockquote:border-l-4 prose-blockquote:border-primary prose-blockquote:pl-4 prose-blockquote:italic prose-blockquote:text-gray-400
          ">
            <Content />
          </div>
        </div>

        <!-- Navegación entre posts -->
        <div class="mt-12 flex justify-between items-center">
          <a href="/en/blog" class="btn-outline">
            ← Back to Blog
          </a>
        </div>
      </div>
    </article>
  </main>

  <Footer />
  <FloatingButtons />
</Layout>

